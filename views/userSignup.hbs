<section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex align-items-center justify-content-center h-100">
      <div class="col-md-8 col-lg-7 col-xl-6">
        <img
          src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.svg"
          class="img-fluid"
          alt="Phone image"
        />
      </div>
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">
        <form action="/login" method="POST">
        {{#if loggedErr}}
          <p class="error" style="color: white;">Invailed Username or Password</p>
        {{/if}}
          <!-- Email input -->
          <div class="form-outline mb-4">
            <input
              type="email"
              name="Email"
              id="form1Example13"
              placeholder="Email address"
              class="form-control form-control-lg"
            />

          </div>

          <!-- Password input -->
          <div class="form-outline mb-4">
            <input
            name="password"
              type="password"
              id="form1Example23"
              placeholder="Password"
              class="form-control form-control-lg"
            />

          </div>

          <div class="d-flex justify-content-around align-items-center mb-4">

          </div>

          <!-- Submit button -->
          <a
            style="background-color: #1f6dae"
            role="button"
          ><button
              type="submit"
              
              class="btn btn-primary btn-lg btn-block w-100"
            >Login</button></a>

          <div class="divider d-flex align-items-center my-4">
            <p class="text-center fw-bold mx-3 mb-0 text-muted">OR</p>
          </div>
          <a
            class="btn btn-primary btn-lg btn-block w-100 mr-3"
            style="background-color: #1f6dae"
            href="/login"
            role="button"
            type="submit"
          >
            <i class="fab fa-twitter me-2"></i>Register</a>

        </form>
      </div>
    </div>
  </div>
</section>